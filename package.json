  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/photobook.git"
  },
  "keywords": [
    "photo-gallery",
    "lightroom",
    "nextjs",
    "self-hosted"
  ],
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
